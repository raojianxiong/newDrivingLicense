<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.raojianxiong.project_0801_driving_licences_improve_001.TestStartActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar_test_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.Toolbar
            android:id="@+id/tool_bar_test_start_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_test_start_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="科目一模拟考试"
                android:layout_gravity="center"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/title_size"/>
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <TextView
        android:id="@+id/tv_test_start_01"
        android:layout_below="@id/app_bar_test_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="测试"/>
    <TextView
        android:id="@+id/tv_test_start_02"
        android:layout_below="@id/tv_test_start_01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="测试"/>
    <TextView
        android:id="@+id/tv_test_start_03"
        android:layout_below="@id/tv_test_start_02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="测试"/>
    <TextView
        android:id="@+id/tv_test_start_04"
        android:layout_below="@id/tv_test_start_03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="测试"/>

    <Button
        android:background="@mipmap/narmal"
        android:id="@+id/btn_test_virtual"
        android:layout_width="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"
        android:text="仿真考试"
        android:textColor="@color/colorWhite"
        android:layout_height="wrap_content" />


</RelativeLayout>
